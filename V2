        // Игровые переменные
        let gameState = {
            cards: [],
            flippedCards: [],
            matchedPairs: 0,
            moves: 0,
            attempts: 10, // Ограниченное количество попыток
            gameStarted: false,
            timer: 0,
            timerInterval: null,
            totalPairs: cardData.length,
            gameOver: false
        };

        // DOM элементы
        const gameBoard = document.getElementById('game-board');
        const movesElement = document.getElementById('moves');
        const timerElement = document.getElementById('timer');
        const matchesElement = document.getElementById('matches');
        const attemptsElement = document.getElementById('attempts');
        const progressBar = document.getElementById('progress-bar');
        const resetButton = document.getElementById('reset-btn');
        const hintButton = document.getElementById('hint-btn');
        const faqToggleButton = document.getElementById('faq-toggle');
        const factPanel = document.getElementById('fact-panel');
        const factTitle = document.getElementById('fact-title');
        const factContent = document.getElementById('fact-content');
        const closeFactButton = document.getElementById('close-fact');
        const faqPanel = document.getElementById('faq-panel');
        const faqContent = document.getElementById('faq-content');
        const winMessage = document.getElementById('win-message');
        const winTime = document.getElementById('win-time');
        const winMoves = document.getElementById('win-moves');
        const winAttemptsLeft = document.getElementById('win-attempts-left');
        const playAgainButton = document.getElementById('play-again-btn');
        const gameOverMessage = document.getElementById('game-over-message');
        const loseTime = document.getElementById('lose-time');
        const loseMatches = document.getElementById('lose-matches');
        const tryAgainButton = document.getElementById('try-again-btn');

        // Создание космического фона
        function createSpaceBackground() {
            const spaceBg = document.getElementById('space-bg');
            
            // Создаем туманности
            for (let i = 0; i < 5; i++) {
                const nebula = document.createElement('div');
                nebula.classList.add('nebula');
                nebula.style.width = `${200 + Math.random() * 400}px`;
                nebula.style.height = nebula.style.width;
                nebula.style.top = `${Math.random() * 100}%`;
                nebula.style.left = `${Math.random() * 100}%`;
                nebula.style.background = `radial-gradient(circle, hsla(${Math.random() * 360}, 70%, 50%, 0.3), transparent)`;
                nebula.style.animationDuration = `${20 + Math.random() * 20}s`;
                nebula.style.animationDelay = `${Math.random() * 10}s`;
                spaceBg.appendChild(nebula);
            }
            
            // Создаем пульсары
            for (let i = 0; i < 15; i++) {
                const pulsar = document.createElement('div');
                pulsar.classList.add('pulsar');
                pulsar.style.top = `${Math.random() * 100}%`;
                pulsar.style.left = `${Math.random() * 100}%`;
                pulsar.style.animationDelay = `${Math.random() * 2}s`;
                spaceBg.appendChild(pulsar);
            }
            
            // Создаем звезды
            for (let i = 0; i < 200; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                const size = Math.random() * 3;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.opacity = Math.random() * 0.7 + 0.3;
                star.style.animation = `twinkle ${3 + Math.random() * 5}s infinite alternate`;
                spaceBg.appendChild(star);
            }
        }

        // Создание FAQ о планетах
        function createFaq() {
            faqContent.innerHTML = '';
            
            planetFacts.forEach((planet, index) => {
                const planetItem = document.createElement('div');
                planetItem.classList.add('planet-item');
                planetItem.dataset.index = index;
                
                const planetHeader = document.createElement('div');
                planetHeader.classList.add('planet-header');
                
                const planetIcon = document.createElement('div');
                planetIcon.classList.add('planet-icon');
                planetIcon.style.backgroundColor = cardData.find(c => c.name === planet.name)?.color || '#6d9eff';
                planetIcon.innerHTML = `<i class="${planet.icon}"></i>`;
                
                const planetName = document.createElement('div');
                planetName.classList.add('planet-name');
                planetName.textContent = planet.name;
                
                const planetFact = document.createElement('div');
                planetFact.classList.add('planet-fact');
                planetFact.textContent = planet.fact;
                
                planetHeader.appendChild(planetIcon);
                planetHeader.appendChild(planetName);
                planetItem.appendChild(planetHeader);
                planetItem.appendChild(planetFact);
                
                planetItem.addEventListener('click', () => {
                    // Закрываем другие открытые факты
                    document.querySelectorAll('.planet-item.active').forEach(item => {
                        if (item !== planetItem) item.classList.remove('active');
                    });
                    
                    // Открываем/закрываем текущий факт
                    planetItem.classList.toggle('active');
                });
                
                faqContent.appendChild(planetItem);
            });
        }

        // Инициализация игры
        function initGame() {
            // Очищаем предыдущее состояние
            clearInterval(gameState.timerInterval);
            gameState = {
                cards: [],
                flippedCards: [],
                matchedPairs: 0,
                moves: 0,
                attempts: 10,
                gameStarted: false,
                timer: 0,
                timerInterval: null,
                totalPairs: cardData.length,
                gameOver: false
            };
            
            // Обновляем отображение
            movesElement.textContent = gameState.moves;
            matchesElement.textContent = `${gameState.matchedPairs}/${gameState.totalPairs}`;
            attemptsElement.textContent = gameState.attempts;
            timerElement.textContent = formatTime(gameState.timer);
            updateProgressBar();
            
            // Создаём пары карточек
            const cardPairs = [...cardData, ...cardData];
            
            // Перемешиваем карточки
            shuffleArray(cardPairs);
            
            // Очищаем игровое поле
            gameBoard.innerHTML = '';
            
            // Создаём карточки
            cardPairs.forEach((card, index) => {
                const cardElement = document.createElement('div');
                cardElement.classList.add('card');
                cardElement.dataset.id = card.id;
                cardElement.dataset.index = index;
                
                // Лицевая сторона карточки (изображение)
                const cardFront = document.createElement('div');
                cardFront.classList.add('card-front');
                const cardImage = document.createElement('img');
                cardImage.classList.add('card-image');
                cardImage.src = card.imageUrl;
                cardImage.alt = card.name;
                cardImage.onerror = function() {
                    // Если изображение не загрузилось, показываем заглушку
                    this.src = `https://via.placeholder.com/150x200/1a1f4d/${card.color.replace('#', '')}?text=${encodeURIComponent(card.name)}`;
                };
                cardFront.appendChild(cardImage);
                
                // Обратная сторона карточки (космический узор)
                const cardBack = document.createElement('div');
                cardBack.classList.add('card-back');
                const backIcon = document.createElement('i');
                backIcon.classList.add('fas', 'fa-star');
                cardBack.appendChild(backIcon);
                
                cardElement.appendChild(cardFront);
                cardElement.appendChild(cardBack);
                
                // Добавляем обработчик клика
                cardElement.addEventListener('click', () => flipCard(cardElement, card));
                
                // Сохраняем в состоянии игры
                gameState.cards.push({
                    element: cardElement,
                    id: card.id,
                    name: card.name,
                    fact: card.fact,
                    flipped: false,
                    matched: false
                });
                
                // Добавляем на игровое поле
                gameBoard.appendChild(cardElement);
            });
            
            // Закрываем панель фактов и сообщения
            factPanel.classList.remove('active');
            winMessage.classList.remove('active');
            gameOverMessage.classList.remove('active');
            
            // Включаем кнопки
            hintButton.disabled = false;
            
            // Создаем FAQ
            createFaq();
        }

        // Обновление полосы прогресса попыток
        function updateProgressBar() {
            const percent = (gameState.attempts / 10) * 100;
            progressBar.style.width = `${percent}%`;
            
            // Меняем цвет в зависимости от оставшихся попыток
            if (gameState.attempts <= 3) {
                progressBar.style.background = "#F44336";
            } else if (gameState.attempts <= 6) {
                progressBar.style.background = "#FFC107";
            } else {
                progressBar.style.background = "#4CAF50";
            }
        }

        // Перемешивание массива (алгоритм Фишера-Йетса)
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        // Форматирование времени в мм:сс
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60).toString().padStart(2, '0');
            const secs = (seconds % 60).toString().padStart(2, '0');
            return `${mins}:${secs}`;
        }

        // Запуск таймера
        function startTimer() {
            if (!gameState.gameStarted && !gameState.gameOver) {
                gameState.gameStarted = true;
                gameState.timerInterval = setInterval(() => {
                    gameState.timer++;
                    timerElement.textContent = formatTime(gameState.timer);
                }, 1000);
            }
        }

        // Переворот карточки
        function flipCard(cardElement, cardData) {
            // Если игра окончена, выходим
            if (gameState.gameOver) return;
            
            // Если попытки закончились, выходим
            if (gameState.attempts <= 0) {
                endGame(false);
                return;
            }
            
            const card = gameState.cards.find(c => c.element === cardElement);
            
            // Если карточка уже перевернута или совпала, выходим
            if (card.flipped || card.matched || gameState.flippedCards.length >= 2) {
                return;
            }
            
            // Если игра не начата, начинаем
            if (!gameState.gameStarted) {
                startTimer();
            }
            
            // Переворачиваем карточку
            cardElement.classList.add('flipped');
            card.flipped = true;
            gameState.flippedCards.push(card);
            
            // Если перевернуты две карточки
            if (gameState.flippedCards.length === 2) {
                // Увеличиваем счетчик ходов
                gameState.moves++;
                movesElement.textContent = gameState.moves;
                
                // Уменьшаем количество попыток
                gameState.attempts--;
                attemptsElement.textContent = gameState.attempts;
                updateProgressBar();
                
                // Проверяем, совпадают ли карточки
                const [card1, card2] = gameState.flippedCards;
                
                if (card1.id === card2.id) {
                    // Найдена пара
                    setTimeout(() => {
                        card1.element.classList.add('matched');
                        card2.element.classList.add('matched');
                        card1.matched = true;
                        card2.matched = true;
                        
                        gameState.matchedPairs++;
                        matchesElement.textContent = `${gameState.matchedPairs}/${gameState.totalPairs}`;
                        
                        // Показываем факт о найденной паре
                        showFact(card1.name, card1.fact);
                        
                        // Очищаем перевернутые карточки
                        gameState.flippedCards = [];
                        
                        // Проверяем, завершена ли игра
                        if (gameState.matchedPairs === gameState.totalPairs) {
                            endGame(true);
                        }
                    }, 500);
                } else {
                    // Карточки не совпадают
                    setTimeout(() => {
                        card1.element.classList.remove('flipped');
                        card2.element.classList.remove('flipped');
                        card1.flipped = false;
                        card2.flipped = false;
                        gameState.flippedCards = [];
                        
                        // Проверяем, не закончились ли попытки
                        if (gameState.attempts <= 0) {
                            endGame(false);
                        }
                    }, 1000);
                }
            }
        }

        // Показ факта о планете/созвездии
        function showFact(title, content) {
            factTitle.textContent = title;
            factContent.textContent = content;
            factPanel.classList.add('active');
        }

        // Завершение игры
        function endGame(isWin) {
            clearInterval(gameState.timerInterval);
            gameState.gameOver = true;
            
            if (isWin) {
                // Показываем статистику победы
                winTime.textContent = formatTime(gameState.timer);
                winMoves.textContent = gameState.moves;
                winAttemptsLeft.textContent = gameState.attempts;
                
                // Показываем сообщение о победе с небольшой задержкой
                setTimeout(() => {
                    winMessage.classList.add('active');
                }, 1000);
            } else {
                // Показываем статистику проигрыша
                loseTime.textContent = formatTime(gameState.timer);
                loseMatches.textContent = gameState.matchedPairs;
                
                // Показываем сообщение о проигрыше
                setTimeout(() => {
                    gameOverMessage.classList.add('active');
                }, 500);
            }
        }

        // Подсказка (временно показывает все карточки)
        function showHint() {
            if (gameState.moves === 0 || gameState.gameOver || gameState.attempts <= 2) return;
            
            // Используем попытку для подсказки
            gameState.attempts -= 2;
            attemptsElement.textContent = gameState.attempts;
            updateProgressBar();
            
            // Переворачиваем все карточки
            gameState.cards.forEach(card => {
                if (!card.matched) {
                    card.element.classList.add('flipped');
                    card.flipped = true;
                }
            });
            
            // Через 1.5 секунды скрываем неподходящие карточки
            setTimeout(() => {
                gameState.cards.forEach(card => {
                    if (!card.matched) {
                        card.element.classList.remove('flipped');
                        card.flipped = false;
                    }
                });
                // Очищаем перевернутые карточки
                gameState.flippedCards = [];
                
                // Проверяем, не закончились ли попытки
                if (gameState.attempts <= 0) {
                    setTimeout(() => endGame(false), 500);
                }
            }, 1500);
        }

        // Обработчики событий
        resetButton.addEventListener('click', initGame);
        
        hintButton.addEventListener('click', showHint);
        
        faqToggleButton.addEventListener('click', () => {
            // Прокручиваем к FAQ
            faqPanel.scrollIntoView({ behavior: 'smooth' });
            
            // Добавляем эффект подсветки
            faqPanel.classList.add('glowing');
            setTimeout(() => {
                faqPanel.classList.remove('glowing');
            }, 2000);
        });
        
        closeFactButton.addEventListener('click', () => {
            factPanel.classList.remove('active');
        });
        
        playAgainButton.addEventListener('click', () => {
            winMessage.classList.remove('active');
            initGame();
        });
        
        tryAgainButton.addEventListener('click', () => {
            gameOverMessage.classList.remove('active');
            initGame();
        });

        // Запускаем игру при загрузке страницы
        document.addEventListener('DOMContentLoaded', () => {
            createSpaceBackground();
            initGame();
            
            // Добавляем CSS для мерцания звезд
            const style = document.createElement('style');
            style.textContent = `
                @keyframes twinkle {
                    0%, 100% { opacity: 0.3; }
                    50% { opacity: 1; }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>
